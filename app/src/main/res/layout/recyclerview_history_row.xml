<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight"
    android:padding="6dip"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/rideTime"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Chrono"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="2">
        <TableRow>

            <TextView
                android:id="@+id/howWasRideInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="How was the ride?"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/howWasRideData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Ride data"
                android:textSize="18sp" />

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/howWasWeatherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="How was weather?"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/howWasWeatherData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Weather data"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>







</LinearLayout>